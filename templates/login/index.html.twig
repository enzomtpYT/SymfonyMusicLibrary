{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="form-centered">
            <h1>Se connecter</h1>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            
            {{ form_start(form, { action: path('app_login') }) }}
                {{ form_row(form.email, { value: last_username }) }}
                {{ form_row(form.password) }}

                <div class="text-end">
                    <a href="{{ path('app_register') }}" class="me-2">Je n'ai pas encore de compte.</a>
                    <button type="submit" class="btn btn-danger">Se connecter</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
