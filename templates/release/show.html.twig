{% extends 'base.html.twig' %}

{% block title %}Release{% endblock %}

{% block body %}
    <h1>Release</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ release.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ release.name }}</td>
            </tr>
            <tr>
                <th>ThumbnailURL</th>
                <td>{{ release.thumbnailURL }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ release.category }}</td>
            </tr>
            <tr>
                <th>Favorite</th>
                <td>{{ release.favorite ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_release_index') }}">back to list</a>

    <a href="{{ path('app_release_edit', {'id': release.id}) }}">edit</a>

    {{ include('release/_delete_form.html.twig') }}
{% endblock %}
