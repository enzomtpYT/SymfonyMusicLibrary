{% extends 'base.html.twig' %}

{% block title %}Track{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row align-items-center mb-2">
            <div class="col-auto me-auto">
                <a class="btn btn-danger rounded-pill" href="{{ path('app_track_index') }}">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>
            
            {% if is_granted('ROLE_ADMIN')  %}
                <div class="col-auto">
                    <div class="row gx-1">
                        <div class="col-auto">
                            <a class="btn btn-danger rounded-pill" href="{{ path('app_track_edit', {'id': track.id}) }}">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </div>
                        <div class="col-auto">
                            {{ include('track/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="row mb-3">
            <div class="col-auto">
                <img
                    src="{{ track.album.thumbnail }}"
                    alt="Album thumbnail"
                    class="img-fluid rounded"
                    style="width: 15rem;"
                >
            </div>
            <div class="col">
                <h1 class="mb-0">{{ track.title }}</h1>
                <p class="text-secondary lead">
                {{ track.album.title }}
                </p>
            </div>
        </div>

        <div class="table-responsive border rounded">
            <table class="table mb-0">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ track.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ track.title }}</td>
                    </tr>
                    <tr>
                        <th>Duration</th>
                        <td>{{ track.readableDuration }}</td>
                    </tr>
                    <tr>
                        <th>Album</th>
                        <td>{{ track.album.title }}</td>
                    </tr>
                    <tr>
                        <th>Featuring</th>
                        <td>{{ track.featuring|join(', ') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
