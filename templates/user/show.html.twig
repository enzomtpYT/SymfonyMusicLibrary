{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row align-items-center mb-2">
            <div class="col-auto">
                <a class="btn btn-danger rounded-pill" href="{{ path('app_user_index') }}">
                    <i class="fa-solid fa-long-arrow-left"></i>
                </a>
            </div>
            <div class="col">
                <h1>Utilisateur</h1>
            </div>
            <div class="col-auto">
                <div class="row gx-1">
                    <div class="col-auto">
                        <a class="btn btn-danger rounded-pill" href="{{ path('app_user_edit', {'id': user.id}) }}">
                            <i class="fa-solid fa-edit"></i>
                        </a>
                    </div>
                    <div class="col-auto">
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
            </tbody>
        </table>



    </div>
{% endblock %}
